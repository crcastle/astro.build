---
import { getImage } from "astro:assets";
import Link from "./_components/Link.astro";
import MainLayout from "~/layouts/MainLayout.astro";
import Showcase from "./_components/Showcase.astro";
import background from "./_assets/hero-background.png";
import AstroLogoLight from "./_components/AstroLogoLight.astro";

export const prerender = true;
const title = "Astro Developers Program";
const description = "Build for the Astro Ecosystem";

const heroBackground = await getImage({ src: background, format: "webp", width: 1280})
---

<MainLayout
  class="bg-[#060913]"
  rawTitle={title}
  description={description}
  image={{
    src: "/og/astro-db.jpg",
    alt: "Astro Developers Program - Build for the Astro Ecosystem",
  }}>

    <section class="min-h-screen space-y-8 bg-cover bg-top bg-no-repeat" style={{ backgroundImage: `url(${heroBackground.src})` }}>

        <div class="px-4 sm:px-8 pt-20 sm:pt-40 mx-auto w-full max-w-screen-2xl">
            <div class="flex flex-col items-center justify-center">
                <div class="w-24 h-24 sm:w-32 sm:h-32 flex items-center justify-center rounded-2xl sm:rounded-3xl">
                    <AstroLogoLight />
                </div>
                
                <div class='mt-10 sm:mt-16 w-full max-w-screen-lg mx-auto flex flex-col items-center justify-center gap-2 md:gap-6 text-center'>
                    <h1 id="hero-title" class='text-white font-bold font-heading text-xl md:text-3xl xl:text-4xl' style="text-wrap: balance;">
                        Join the Astro Developer Program
                    </h1>
                    <p id="hero-description" class='text-[#BFC1C9] text-base md:text-lg' style="text-wrap: balance;">
                        Reach over 100,000 Astro users across the Astro developer ecosystem. Distribute free and premium themes, integrations, and Astro Studio applications directly through our official marketplace. â€¨We handle everything for you, including payment processing and analytics.
                    </p>
                    
                    <div class='mt-4 sm:mt-8 flex flex-col items-center justify-center gap-4'>
                        <div id="CTA">
                            <Link href='#'>
                                <span class='bg-clip-text text-transparent bg-gradient-to-r from-[#3245FF] to-[#BC52EE]'>
                                    Join the program
                                </span>
                            </Link>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <Showcase />
    </section>
</MainLayout>

<style>

    #hero-title {
		animation: fadeIn 800ms ease-in; 
	}

	#hero-description {
		animation: fadeIn 900ms ease-in;
	}

    #CTA {
		animation: fadeIn 1000ms ease-in;
	}

    @keyframes fadeIn {  
		from { opacity:0; transform:  translateY(32px); }  
		to { opacity:1; transform:  translateY(0px); }  
	}
</style>
