---
import { getImage } from "astro:assets"
import ThemeTwo from "../_assets/themes/theme-2.png"
import ThemeSeven from "../_assets/themes/theme-7.png"
import ThemeEight from "../_assets/themes/theme-8.png"
import ThemeNine from "../_assets/themes/theme-9.png"

const themeTwo = await getImage({ src: ThemeTwo, format: "webp", width: 1080 })
const themeSeven = await getImage({ src: ThemeSeven, format: "webp", width: 1080 })
const themeEight = await getImage({ src: ThemeEight, format: "webp", width: 1080 })
const themeNine = await getImage({ src: ThemeNine, format: "webp", width: 1080 })
---

<section class="mt-10 md:mt-20 lg:mt-32 px-4 sm:px-8">
    <div class="w-full h-[40rem] relative flex items-center justify-center overflow-hidden">

        <div class="absolute z-50 w-full h-full bg-gradient-to-b from-transparent via-[#060913] via-70% to-95% to-[#060913]">
        </div>

        <div class="w-3/4 p-2 absolute z-40 bg-[#111521] border border-[#1E2231] rounded-2xl">
            <img class="rounded-xl w-full object-cover object-top" src={themeTwo.src} alt="AstroWind Theme">
        </div>

        <div class="w-3/4 h-3/4 p-2 absolute left-32 z-30 bg-[#111521] border border-[#1E2231] rounded-2xl">
            <img class="rounded-xl w-full h-full object-cover object-top" src={themeSeven.src} alt="AstroPaper Theme">
        </div>

        <div class="w-3/4 h-3/4 p-2 absolute right-32 z-30 bg-[#111521] border border-[#1E2231] rounded-2xl">
            <img class="rounded-xl w-full h-full object-cover object-top" src={themeNine.src} alt="Astroplate Theme">
        </div>

        <div class="w-2/4 h-4/6 p-2 absolute left-[6.3rem] z-20 bg-[#111521] border border-[#1E2231] rounded-2xl">
            <img class="rounded-xl w-full h-full object-cover object-left-top" src={themeEight.src} alt="Masonry UI Theme">
        </div>

        <div class="w-2/4 h-4/6 p-2 absolute right-[6.3rem] z-20 bg-[#111521] border border-[#1E2231] rounded-2xl">
            <img class="rounded-xl w-full h-full object-cover object-right-top" src={themeTwo.src} alt="AstroWind Theme">
        </div>
    </div>
</section>